@page "/Customer/Edit/{id}"

@using RazorPages.Samples.Web
@using RazorPages.Samples.Web.Data
@model EditCustomer

@{
    Layout = "~/Pages/_Layout.cshtml";
    ViewBag.Title = "All about interesting people";
}

<h2>Edit Customer</h2>
@if (Model.ShowSuccessMessage || Model.ShowErrorMessage) {
    <div class="alert alert-@(Model.ShowSuccessMessage ? "success" : "danger") alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="close"><span aria-hidden="true">&times;</span></button>
        @(Model.ShowSuccessMessage ? Model.SuccessMessage : Model.ErrorMessage)
    </div>    
}
<form method="post" class="form-inline" href="/Customer/Edit/@Model.Customer.Id">
    <div class="form-group">
        <label asp-for="Customer.Name"></label>
        <input asp-for="Customer.Name" class="form-control" />
    </div>
    <input type="submit" value="Save" class="btn btn-primary" />
    <a class="btn btn-default" href="/">Cancel</a>
    <div asp-validation-summary="@ValidationSummary.All" class="text-danger"></div>
</form>